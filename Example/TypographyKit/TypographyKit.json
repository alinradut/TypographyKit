{
	"typography-colors": {
        "interactive": "lightest purple",
        "background": {
            "dark": "dark royal-blue",
            "light": "lightest gray"
        },
        "gold": "#FFAB01",
        "royal-blue": "#08224C",
        "text": {
            "light": "black",
            "dark": "lightest gray"
        },
        "text-dark": "text darker"
	},
	"typography-kit": {
        "labels": {
            "line-break": "word-wrap"
        },
        "minimum-point-size": 10,
        "maximum-point-size": 100,
		"point-step-size": 2,
		"point-step-multiplier": 1,
        "scaling-mode": "uifontmetrics-with-fallback"
	},
	"ui-font-text-styles": {
		"heading": {
			"font-name": "Avenir-Medium",
			"point-size": 36,
			
			"letter-case": "regular",
            "text-color": "green",
		},
		"paragraph": {
			"font-name": "Avenir-Medium",
            "minimum-point-size": 12,
            "maximum-point-size": 34,
			"point-size": 18,
            "text-color": "text",
            "disabled-text-color": "#AAAAAA",
            "highlighted-text-color": "#FF0000",
            "selected-text-color": "#00FF00",
            "letter-case": "regular",
            "background-color": "red",
            "line-spacing" : 10,
            "letter-spacing" : 2
		},
        "example": {
            "font-name": "System-Bold",
            "point-size": 16,
            "text-color": "text"
        },
        "interactive-text": {
            "extends": "paragraph",
            "text-color": "interactive"
        }
	}
}
